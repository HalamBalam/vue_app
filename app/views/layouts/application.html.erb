<!DOCTYPE html>
<html>
  <head>
    <title>VueApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body>
    <div>
      <% unless staff_signed_in? %>
        <%= link_to 'Log in', new_staff_session_path %> |
        <%= link_to 'New Staff', new_staff_registration_path %>
      <% end %>
    </div>
    <div id="app">
    </div>
    <%= yield %>
    <%= javascript_pack_tag 'staff' %>
  </body>
</html>
